<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
     viewBox="0 0 800 600" width="800" height="600">
  <defs>
    <linearGradient id="skyGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#1e90ff;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#87ceeb;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="grassGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#228b22;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#006400;stop-opacity:1"/>
    </linearGradient>
    <radialGradient id="sunGrad" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffff00;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#ffa500;stop-opacity:0.8"/>
    </radialGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3"/>
      <feOffset dx="2" dy="2" result="offsetblur"/>
      <feMerge>
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
    <clipPath id="treeClip">
      <circle cx="400" cy="300" r="200"/>
    </clipPath>
    <pattern id="stripes" patternUnits="userSpaceOnUse" width="10" height="10">
      <line x1="0" y1="0" x2="10" y2="10" stroke="#333" stroke-width="1"/>
    </pattern>
    <symbol id="star" viewBox="0 0 50 50">
      <polygon points="25,2 32,18 49,18 35,29 40,46 25,36 10,46 15,29 1,18 18,18"
               fill="#FFD700" stroke="#DAA520" stroke-width="1"/>
    </symbol>
  </defs>

  <title>Landscape Drawing</title>
  <desc>A simple landscape scene with sky, grass, sun, trees, and clouds</desc>

  <!-- Sky background -->
  <rect x="0" y="0" width="800" height="400" fill="url(#skyGrad)"/>

  <!-- Ground -->
  <rect x="0" y="400" width="800" height="200" fill="url(#grassGrad)"/>

  <!-- Sun -->
  <circle cx="650" cy="100" r="60" fill="url(#sunGrad)" filter="url(#shadow)"/>
  <g transform="translate(650, 100)" opacity="0.6">
    <line x1="-80" y1="0" x2="-70" y2="0" stroke="#FFD700" stroke-width="2"/>
    <line x1="80" y1="0" x2="70" y2="0" stroke="#FFD700" stroke-width="2"/>
    <line x1="0" y1="-80" x2="0" y2="-70" stroke="#FFD700" stroke-width="2"/>
    <line x1="0" y1="80" x2="0" y2="70" stroke="#FFD700" stroke-width="2"/>
    <line x1="-56" y1="-56" x2="-49" y2="-49" stroke="#FFD700" stroke-width="2"/>
    <line x1="56" y1="-56" x2="49" y2="-49" stroke="#FFD700" stroke-width="2"/>
    <line x1="-56" y1="56" x2="-49" y2="49" stroke="#FFD700" stroke-width="2"/>
    <line x1="56" y1="56" x2="49" y2="49" stroke="#FFD700" stroke-width="2"/>
  </g>

  <!-- Clouds -->
  <g fill="white" opacity="0.9">
    <g transform="translate(150, 80)">
      <ellipse cx="0" cy="0" rx="50" ry="25"/>
      <ellipse cx="40" cy="-10" rx="40" ry="20"/>
      <ellipse cx="-30" cy="5" rx="35" ry="18"/>
      <ellipse cx="20" cy="10" rx="45" ry="22"/>
    </g>
    <g transform="translate(400, 60)">
      <ellipse cx="0" cy="0" rx="60" ry="30"/>
      <ellipse cx="50" cy="-15" rx="45" ry="22"/>
      <ellipse cx="-40" cy="5" rx="40" ry="20"/>
    </g>
    <g transform="translate(600, 120)">
      <ellipse cx="0" cy="0" rx="35" ry="18"/>
      <ellipse cx="30" cy="-8" rx="30" ry="15"/>
      <ellipse cx="-20" cy="5" rx="25" ry="12"/>
    </g>
  </g>

  <!-- Mountains -->
  <g fill="#696969" opacity="0.7">
    <polygon points="0,400 150,250 300,400"/>
    <polygon points="200,400 400,200 600,400"/>
    <polygon points="500,400 700,280 800,400"/>
  </g>

  <!-- Trees -->
  <g id="trees">
    <g transform="translate(100, 380)">
      <rect x="-8" y="0" width="16" height="40" fill="#8B4513"/>
      <polygon points="-30,0 0,-60 30,0" fill="#228B22"/>
      <polygon points="-25,-20 0,-70 25,-20" fill="#2E8B57"/>
      <polygon points="-20,-40 0,-80 20,-40" fill="#32CD32"/>
    </g>
    <g transform="translate(250, 390)">
      <rect x="-6" y="0" width="12" height="30" fill="#8B4513"/>
      <polygon points="-25,0 0,-50 25,0" fill="#228B22"/>
      <polygon points="-20,-15 0,-55 20,-15" fill="#2E8B57"/>
    </g>
    <g transform="translate(550, 385)">
      <rect x="-10" y="0" width="20" height="45" fill="#8B4513"/>
      <polygon points="-35,0 0,-70 35,0" fill="#228B22"/>
      <polygon points="-30,-25 0,-80 30,-25" fill="#2E8B57"/>
      <polygon points="-25,-45 0,-90 25,-45" fill="#32CD32"/>
    </g>
    <g transform="translate(700, 392)">
      <rect x="-5" y="0" width="10" height="25" fill="#8B4513"/>
      <polygon points="-20,0 0,-40 20,0" fill="#228B22"/>
      <polygon points="-15,-12 0,-45 15,-12" fill="#2E8B57"/>
    </g>
  </g>

  <!-- Flowers on the grass -->
  <g>
    <g transform="translate(50, 480)">
      <circle cx="0" cy="0" r="5" fill="#FF69B4"/>
      <circle cx="0" cy="0" r="2" fill="#FFD700"/>
    </g>
    <g transform="translate(180, 500)">
      <circle cx="0" cy="0" r="4" fill="#FF1493"/>
      <circle cx="0" cy="0" r="1.5" fill="#FFFF00"/>
    </g>
    <g transform="translate(350, 470)">
      <circle cx="0" cy="0" r="5" fill="#FF69B4"/>
      <circle cx="0" cy="0" r="2" fill="#FFD700"/>
    </g>
    <g transform="translate(480, 510)">
      <circle cx="0" cy="0" r="4" fill="#DA70D6"/>
      <circle cx="0" cy="0" r="1.5" fill="#FFFF00"/>
    </g>
    <g transform="translate(620, 490)">
      <circle cx="0" cy="0" r="5" fill="#FF69B4"/>
      <circle cx="0" cy="0" r="2" fill="#FFD700"/>
    </g>
    <g transform="translate(750, 475)">
      <circle cx="0" cy="0" r="4" fill="#FF1493"/>
      <circle cx="0" cy="0" r="1.5" fill="#FFFF00"/>
    </g>
  </g>

  <!-- Stars in the sky using symbol -->
  <use xlink:href="#star" x="50" y="20" width="15" height="15" opacity="0.3"/>
  <use xlink:href="#star" x="300" y="40" width="12" height="12" opacity="0.2"/>
  <use xlink:href="#star" x="500" y="15" width="10" height="10" opacity="0.25"/>

  <!-- Path element for a winding road -->
  <path d="M 400,600 Q 380,500 350,450 T 300,400" fill="none" stroke="#A0522D" stroke-width="20" stroke-linecap="round" opacity="0.6"/>

  <!-- Text label -->
  <text x="400" y="580" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white" opacity="0.7">Landscape Scene - SVG Benchmark</text>
</svg>
