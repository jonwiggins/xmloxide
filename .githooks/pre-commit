#!/bin/sh
# Pre-commit hook: run cargo fmt, clippy, tests, and doc check before committing
#
# Note: we intentionally do NOT use --all-features because the bench-libxml2
# feature requires the libxml2 system library and a newer Rust edition.
# CI mirrors these exact commands.

set -e

echo "Running cargo fmt..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo ""
    echo "ERROR: Code is not formatted. Run 'cargo fmt --all' and try again."
    exit 1
fi
echo "Formatting check passed."

echo ""
echo "Running cargo clippy..."
cargo clippy --all-targets -- -D warnings
if [ $? -ne 0 ]; then
    echo ""
    echo "ERROR: Clippy found warnings. Fix them and try again."
    exit 1
fi
echo "Clippy check passed."

echo ""
echo "Running cargo test..."
cargo test --quiet
if [ $? -ne 0 ]; then
    echo ""
    echo "ERROR: Tests failed. Fix them and try again."
    exit 1
fi
echo "All tests passed."

echo ""
echo "Running cargo doc..."
RUSTDOCFLAGS="-D warnings" cargo doc --no-deps --quiet
if [ $? -ne 0 ]; then
    echo ""
    echo "ERROR: Documentation build has warnings. Fix them and try again."
    exit 1
fi
echo "Documentation check passed."
